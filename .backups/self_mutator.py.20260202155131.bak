import os
import ast
import time
import shutil
from typing import Callable, Optional

class SelfMutator:
    """
    Handles the recursive self-modification of the Genesis Kernel.
    It validates code, creates backups, and writes new source code to disk.
    """

    def __init__(self, root_dir: str, script_path: str, logger: Callable[[str], None]):
        """
        Initializes the SelfMutator.

        Args:
            root_dir (str): The root directory of the project.
            script_path (str): The absolute path to the main agent script (e.g., evolve_agent.py).
            logger (Callable[[str], None]): A logging function.
        """
        self.root_dir = root_dir
        self.script_path = script_path
        self.log = logger
        self.bak_dir = os.path.join(root_dir, "backups")
        # Ensure backups directory exists
        os.makedirs(self.bak_dir, exist_ok=True)
        self.log("SelfMutator initialized.")

    def validate_syntax(self, code: str) -> bool:
        """
        Validates Python syntax using AST parsing to prevent lethal mutations.

        Args:
            code (str): The code string to validate.

        Returns:
            bool: True if syntax is valid, False otherwise.
        """
        try:
            ast.parse(code)
            return True
        except SyntaxError as e:
            self.log(f"Syntax Error detected in proposed code: {e}")
            return False

    def create_backup(self) -> bool:
        """
        Creates a backup of the current script state.

        Returns:
            bool: True if successful, False otherwise.
        """
        timestamp = time.strftime("%Y%m%d_%H%M%S")
        backup_filename = f"evolve_agent_{timestamp}.bak"
        backup_path = os.path.join(self.bak_dir, backup_filename)
        
        try:
            shutil.copy2(self.script_path, backup_path)
            self.log(f"Backup created: {backup_path}")
            return True
        except Exception as e:
            self.log(f"Failed to create backup: {e}")
            return False

    def cleanup_old_backups(self, keep_count: int = 3):
        """
        Maintains a rolling window of backups to save disk space.

        Args:
            keep_count (int): Number of most recent backups to retain.
        """
        try:
            files = [f for f in os.listdir(self.bak_dir) if f.endswith(".bak")]
            files.sort(key=lambda x: os.path.getmtime(os.path.join(self.bak_dir, x)))
            
            # Keep the most recent 'keep_count' files
            to_delete = files[:-keep_count]
            
            for f in to_delete:
                os.remove(os.path.join(self.bak_dir, f))
                self.log(f"Cleaned up old backup: {f}")
        except Exception as e:
            self.log(f"Error during backup cleanup: {e}")

    def write_code(self, code: str) -> bool:
        """
        Writes the new code to the source file.

        Args:
            code (str): The new source code.

        Returns:
            bool: True if successful, False otherwise.
        """
        try:
            with open(self.script_path, "w", encoding="utf-8") as f:
                f.write(code)
            self.log(f"Successfully wrote new code to {self.script_path}")
            return True
        except Exception as e:
            self.log(f"Failed to write code to file: {e}")
            return False

    def apply_evolution(self, new_code: str) -> bool:
        """
        Orchestrates the mutation process: Backup -> Validate -> Write.

        Args:
            new_code (str): The proposed new code from the LLM.

        Returns:
            bool: True if the evolution was applied successfully.
        """
        self.log("Initiating evolution process...")
        
        # 1. Backup
        if not self.create_backup():
            self.log("CRITICAL: Backup failed. Aborting evolution.")
            return False

        # 2. Validate
        if not self.validate_syntax(new_code):
            self.log("CRITICAL: Syntax validation failed. Evolution rejected.")
            return False

        # 3. Write
        if self.write_code(new_code):
            self.cleanup_old_backups()
            return True
        else:
            return False